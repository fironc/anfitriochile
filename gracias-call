  <div class="confetti" id="confetti"></div>

  <script>
    // Read amount/product from URL, e.g. /gracias.html?value=34990&product=Chequeo%20R%C3%A1pido
    const params = new URLSearchParams(location.search);
    const value = Number(params.get('value') || '34990');
    const product = decodeURIComponent(params.get('product') || 'Chequeo Rápido');
    document.getElementById('orderText').textContent = `Producto: ${product} — Total: $${value.toLocaleString('es-CL')} CLP`;

    // Fire Purchase event if Pixel is present
    if (window.fbq) {
      fbq('track', 'Purchase', { value, currency: 'CLP', content_name: product });
    }

    // Simple confetti
    const c = document.getElementById('confetti');
    const colors = ['#0E7C7B','#F4B942','#7DD3FC','#A7F3D0','#FDE68A'];
    for (let i=0;i<40;i++){
      const d=document.createElement('div'); d.className='dot';
      d.style.left = (Math.random()*100)+'vw';
      d.style.background = colors[Math.floor(Math.random()*colors.length)];
      d.style.transform = `translateY(-10vh) rotate(${Math.random()*60}deg)`;
      d.style.animationDelay = (Math.random()*0.6)+'s';
      c.appendChild(d);
    }
  </script>
